<Window x:Class="GarmentFactory.OneOfTheProducts"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GarmentFactory"
        mc:Ignorable="d"
        Title="Продукт " Height="400" Width="400">
    <Grid>
        <DockPanel LastChildFill="False">
            <Label x:Name="lblProductName" DockPanel.Dock="Top" Content="" FontSize="16"></Label>
            <Image x:Name="imgProductPhoto" DockPanel.Dock="Top" Height="200"></Image>
            <Label x:Name="lblProductWidth" DockPanel.Dock="Top" Content="" FontSize="16"></Label>
            <Label x:Name="lblProductHeight" DockPanel.Dock="Top" Content="" FontSize="16"></Label>
        </DockPanel>
    </Grid>
</Window>
